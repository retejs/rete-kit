{
	"compilerOptions": {
		"outDir": "bin",
		"declaration": true,
		"target": "ES2018",
		"moduleResolution": "Node",
		"module": "CommonJS",
		"allowJs": true,
		"strict": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"noImplicitAny": false,
		"skipLibCheck": true
	},
	"include": ["src"],
}
